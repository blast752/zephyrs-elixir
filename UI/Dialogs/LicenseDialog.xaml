<Window x:Class="ZephyrsElixir.UI.Views.LicenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:ZephyrsElixir.UI.Helpers"
        Title="License" Width="460" SizeToContent="Height"
        WindowStartupLocation="CenterOwner" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" ShowInTaskbar="False">

    <Window.Resources>
        <h:LoadingTextConverter x:Key="LoadingText"/>
        <h:StringToVisibilityConverter x:Key="StrToVis"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border CornerRadius="16" 
            Background="#FF0E1A33"
            BorderBrush="{DynamicResource App.Brush.Gold}" BorderThickness="1.5"
            Effect="{DynamicResource App.Effect.PageShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource App.Brush.Glass.Background}" 
                    CornerRadius="16,16,0,0" Padding="24,18">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="44" Height="44" CornerRadius="12" Margin="0,0,16,0"
                                Background="{DynamicResource App.Brush.IconCircle}">
                            <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       Foreground="{DynamicResource App.Brush.CheckedForeground}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="License" FontSize="20" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource App.Brush.CheckedForeground}"/>
                                <Border Background="{DynamicResource App.Brush.Gold}" 
                                        CornerRadius="4" Padding="8,2" Margin="12,0,0,0" VerticalAlignment="Center"
                                        Visibility="{Binding IsPro, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="PRO" FontSize="11" FontWeight="Bold">
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{DynamicResource App.Color.Blue900}"/>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding TierDisplayName, StringFormat='Status: {0}'}"
                                       FontSize="12" Foreground="{DynamicResource App.Brush.NavButtonForeground}" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="32" Height="32" 
                            Cursor="Hand" h:WindowClose.Result="{Binding IsPro}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bg" Background="Transparent" CornerRadius="8">
                                    <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                               Foreground="{DynamicResource App.Brush.NavButtonForeground}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bg" Property="Background" 
                                                Value="{DynamicResource App.Brush.Idle}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20,24,24">
                <StackPanel>
                    
                    <Border Background="#0A4ADE80" BorderThickness="1" CornerRadius="12" Padding="20"
                            Visibility="{Binding IsPro, Converter={StaticResource BoolToVis}}" Margin="0,0,0,20">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{DynamicResource App.Color.DeepSkyBlue}" Opacity="0.2"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                           Foreground="{DynamicResource App.Brush.DeepSkyBlue}" Margin="0,0,10,0"/>
                                <TextBlock Text="Pro License Active" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource App.Brush.DeepSkyBlue}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ExpirationText}" FontSize="13" 
                                       Foreground="{DynamicResource App.Brush.DeepSkyBlue}" Opacity="0.8" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding OfflineStatusText}" FontSize="12" 
                                       Foreground="{DynamicResource App.Brush.NavButtonForeground}"/>
                            
                            <Button Content="Deactivate License" Command="{Binding DeactivateCommand}"
                                    Margin="0,16,0,0" HorizontalAlignment="Left" Height="36" Padding="16,0" 
                                    FontSize="12" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bg" Background="{DynamicResource App.Brush.Destructive.Idle}" 
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Background" 
                                                        Value="{DynamicResource App.Brush.Destructive.Hover}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Foreground>
                                    <SolidColorBrush Color="{DynamicResource App.Color.Crimson}"/>
                                </Button.Foreground>
                            </Button>
                        </StackPanel>
                    </Border>

                    <StackPanel Visibility="{Binding IsPro, Converter={StaticResource App.Converter.InverseBoolToVisibility}}">
                        <TextBlock Text="Unlock Pro Features" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Brush.CheckedForeground}" Margin="0,0,0,14"/>

                        <Border Background="{DynamicResource App.Brush.Glass.Background}" 
                                CornerRadius="12" Padding="16" Margin="0,0,0,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="&#xE945;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                            Foreground="{DynamicResource App.Brush.DeepSkyBlue}" Width="24"/>
                                    <StackPanel>
                                        <TextBlock Text="{h:Translate License_Feature_ExtremeMode}" 
                                                Foreground="{DynamicResource App.Brush.CheckedForeground}" FontSize="13" FontWeight="Medium"/>
                                        <TextBlock Text="{h:Translate License_Feature_ExtremeMode_Desc}" 
                                                Foreground="{DynamicResource App.Brush.NavButtonForeground}" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                            Foreground="{DynamicResource App.Brush.DeepSkyBlue}" Width="24"/>
                                    <StackPanel>
                                        <TextBlock Text="{h:Translate License_Feature_ScreenMirror}" 
                                                Foreground="{DynamicResource App.Brush.CheckedForeground}" FontSize="13" FontWeight="Medium"/>
                                        <TextBlock Text="{h:Translate License_Feature_ScreenMirror_Desc}" 
                                                Foreground="{DynamicResource App.Brush.NavButtonForeground}" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                            Foreground="{DynamicResource App.Brush.DeepSkyBlue}" Width="24"/>
                                    <StackPanel>
                                        <TextBlock Text="{h:Translate License_Feature_AIAnalysis}" 
                                                Foreground="{DynamicResource App.Brush.CheckedForeground}" FontSize="13" FontWeight="Medium"/>
                                        <TextBlock Text="{h:Translate License_Feature_AIAnalysis_Desc}" 
                                                Foreground="{DynamicResource App.Brush.NavButtonForeground}" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                            Foreground="{DynamicResource App.Brush.DeepSkyBlue}" Width="24"/>
                                    <StackPanel>
                                        <TextBlock Text="{h:Translate License_Feature_PrivacySuite}" 
                                                Foreground="{DynamicResource App.Brush.CheckedForeground}" FontSize="13" FontWeight="Medium"/>
                                        <TextBlock Text="{h:Translate License_Feature_PrivacySuite_Desc}" 
                                                Foreground="{DynamicResource App.Brush.NavButtonForeground}" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                            Foreground="{DynamicResource App.Brush.DeepSkyBlue}" Width="24"/>
                                    <StackPanel>
                                        <TextBlock Text="{h:Translate License_Feature_BackupAPK}" 
                                                Foreground="{DynamicResource App.Brush.CheckedForeground}" FontSize="13" FontWeight="Medium"/>
                                        <TextBlock Text="{h:Translate License_Feature_BackupAPK_Desc}" 
                                                Foreground="{DynamicResource App.Brush.NavButtonForeground}" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="&#xE8FB;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                            Foreground="{DynamicResource App.Brush.DeepSkyBlue}" Width="24"/>
                                    <StackPanel>
                                        <TextBlock Text="{h:Translate License_Feature_PrioritySupport}" 
                                                Foreground="{DynamicResource App.Brush.CheckedForeground}" FontSize="13" FontWeight="Medium"/>
                                        <TextBlock Text="{h:Translate License_Feature_PrioritySupport_Desc}" 
                                                Foreground="{DynamicResource App.Brush.NavButtonForeground}" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <TextBlock Text="{h:Translate License_Feature_ComingSoon}" 
                                        Foreground="{DynamicResource App.Brush.Gold}" FontSize="12" 
                                        FontStyle="Italic" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="L I C E N S E   K E Y" FontSize="10" FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Brush.NavButtonForeground}" Margin="0,0,0,8"/>
                        
                        <TextBox x:Name="TxtLicenseKey" 
                                 Text="{Binding LicenseKey, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{DynamicResource App.Style.LicenseKeyTextBox}"
                                 Tag="Z-XXXXXX-XXXXXXXX-XXXXXXX"/>

                        <TextBlock Text="{Binding ErrorMessage}" FontSize="12" Margin="0,10,0,0" TextWrapping="Wrap"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StrToVis}}">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource App.Color.Crimson}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock Text="{Binding SuccessMessage}" Foreground="{DynamicResource App.Brush.DeepSkyBlue}"
                                   FontSize="12" Margin="0,10,0,0" TextWrapping="Wrap"
                                   Visibility="{Binding SuccessMessage, Converter={StaticResource StrToVis}}"/>

                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" Content="Get License" Command="{Binding OpenPurchasePageCommand}"
                                    Height="42" FontSize="13" FontWeight="Medium" Cursor="Hand"
                                    Foreground="{DynamicResource App.Brush.NavButtonForeground}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bg" Background="{DynamicResource App.Brush.Idle}" 
                                                BorderBrush="{DynamicResource App.Brush.Glass.Border}" 
                                                BorderThickness="1" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Background" 
                                                        Value="{DynamicResource App.Brush.Hover}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Grid.Column="2" Command="{Binding ActivateCommand}" IsEnabled="{Binding CanActivate}"
                                    Content="{Binding IsLoading, Converter={StaticResource LoadingText}, ConverterParameter='Activate|Activating...'}"
                                    Height="42" FontSize="13" FontWeight="SemiBold" Cursor="Hand"
                                    Foreground="{DynamicResource App.Brush.CheckedForeground}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bg" Background="{DynamicResource App.Brush.IconCircle}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="bg" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <Border Background="{DynamicResource App.Brush.Glass.Background}" 
                            CornerRadius="8" Padding="16,14" Margin="0,24,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                           Foreground="{DynamicResource App.Brush.NavButtonForeground}" 
                                           Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.7"/>
                                <TextBlock Text="We only collect an anonymous device ID for validation." 
                                           FontSize="11" Foreground="{DynamicResource App.Brush.NavButtonForeground}" Opacity="0.7"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Your Device ID:" FontSize="11" FontWeight="Medium"
                                           Foreground="{DynamicResource App.Brush.NavButtonForeground}" 
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding DeviceId}" FontSize="11" FontFamily="Consolas"
                                           Foreground="{DynamicResource App.Brush.DeepSkyBlue}" 
                                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                <Button Grid.Column="2" Command="{Binding CopyDeviceIdCommand}" ToolTip="Copy Device ID"
                                        Width="26" Height="26" Margin="8,0,0,0" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="Transparent" CornerRadius="6">
                                                <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                                           Foreground="{DynamicResource App.Brush.DeepSkyBlue}" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" 
                                                            Value="{DynamicResource App.Brush.Idle}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.RowSpan="2" CornerRadius="16"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                <Border.Background>
                    <SolidColorBrush Color="{DynamicResource App.Color.Blue900}" Opacity="0.9"/>
                </Border.Background>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Style="{DynamicResource License.Style.Spinner}"/>
                    <TextBlock Text="Please wait..." Foreground="{DynamicResource App.Brush.NavButtonForeground}" 
                               FontSize="13" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
