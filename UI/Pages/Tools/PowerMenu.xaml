<UserControl x:Class="ZephyrsElixir.UI.Pages.PowerMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:h="clr-namespace:ZephyrsElixir.UI.Helpers"
             Background="Transparent">

    <UserControl.Resources>
        <LinearGradientBrush x:Key="Power.Brush.Accent" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF9F43" Offset="0"/>
            <GradientStop Color="#E67E22" Offset="1"/>
        </LinearGradientBrush>

        <DropShadowEffect x:Key="Power.Effect.Glow" Color="#FF9F43" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>

        <Style x:Key="Reboot.Style.OptionCard" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="container" 
                                Background="#12FFFFFF" 
                                BorderBrush="#25FFFFFF" 
                                BorderThickness="1" 
                                CornerRadius="12" 
                                Padding="14">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="44" Height="44" CornerRadius="10" 
                                        Background="{Binding IconBrush}" 
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Icon}" 
                                            FontFamily="Segoe MDL2 Assets" 
                                            FontSize="20" 
                                            Foreground="White"
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="14,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}" 
                                            FontSize="14" 
                                            FontWeight="SemiBold" 
                                            Foreground="White"/>
                                    <TextBlock Text="{Binding Description}" 
                                            FontSize="11" 
                                            Foreground="#70FFFFFF" 
                                            TextWrapping="NoWrap"
                                            TextTrimming="CharacterEllipsis"
                                            Margin="0,3,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                        Text="&#xE76C;" 
                                        FontFamily="Segoe MDL2 Assets" 
                                        FontSize="12" 
                                        Foreground="#40FFFFFF"
                                        VerticalAlignment="Center"
                                        x:Name="ArrowIcon"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="container" Property="Background" Value="#20FFFFFF"/>
                                <Setter TargetName="container" Property="BorderBrush" Value="#40FFFFFF"/>
                                <Setter TargetName="ArrowIcon" Property="Foreground" Value="#80FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="container" Property="Background" Value="#28FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="container" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Power.Style.CategoryHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#60FFFFFF"/>
            <Setter Property="Margin" Value="4,0,0,12"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource App.Style.GlassCard}" Padding="24" Effect="{StaticResource App.Effect.PageShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Border Width="48" Height="48" CornerRadius="24" 
                            Background="{StaticResource Power.Brush.Accent}" 
                            Effect="{StaticResource Power.Effect.Glow}">
                        <TextBlock Text="&#xE777;" FontFamily="Segoe MDL2 Assets" FontSize="22" 
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Power Options" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Restart your device in different modes" 
                                   Foreground="#B0B8C8" FontSize="13" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="2" Style="{StaticResource App.Style.WindowControl.Close}" 
                        Click="OnCloseClick" ToolTip="Close"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource App.Style.GlassCard}" Padding="0" Effect="{StaticResource App.Effect.PageShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <ScrollViewer Margin="28,28,16,28" Padding="0,0,12,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <TextBlock Text="STANDARD OPTIONS" Style="{StaticResource Power.Style.CategoryHeader}"/>

                        <ItemsControl x:Name="StandardOptionsPanel" ItemsSource="{Binding StandardOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource Reboot.Style.OptionCard}" 
                                            Margin="0,0,0,10"
                                            Tag="{Binding Key}"
                                            Click="OnRebootOptionClick"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="ADVANCED OPTIONS" Style="{StaticResource Power.Style.CategoryHeader}" Margin="4,20,0,12"/>

                        <ItemsControl x:Name="AdvancedOptionsPanel" ItemsSource="{Binding AdvancedOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource Reboot.Style.OptionCard}" 
                                            Margin="0,0,0,10"
                                            Tag="{Binding Key}"
                                            Click="OnRebootOptionClick"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="POWER OPTIONS" Style="{StaticResource Power.Style.CategoryHeader}" Margin="4,20,0,12"/>

                        <ItemsControl x:Name="PowerOptionsPanel" ItemsSource="{Binding PowerOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource Reboot.Style.OptionCard}" 
                                            Margin="0,0,0,10"
                                            Tag="{Binding Key}"
                                            Click="OnRebootOptionClick"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Column="1" Background="#08FFFFFF" BorderBrush="#15FFFFFF" BorderThickness="1,0,0,0">
                    <ScrollViewer Margin="24" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="DEVICE STATUS" Style="{StaticResource Power.Style.CategoryHeader}"/>

                            <Border Background="#12FFFFFF" BorderBrush="#25FFFFFF" BorderThickness="1" 
                                    CornerRadius="12" Padding="16" Margin="0,0,0,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="44" Height="44" CornerRadius="10" Background="#18FFFFFF">
                                        <TextBlock x:Name="DeviceIcon" Text="&#xE8EA;" 
                                                   FontFamily="Segoe MDL2 Assets" FontSize="20" 
                                                   Foreground="#FF9F43" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="DeviceNameText" Text="No device connected" 
                                                   FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <Ellipse x:Name="StatusDot" Width="8" Height="8" Fill="#FF6B6B" Margin="0,0,6,0"/>
                                            <TextBlock x:Name="StatusText" Text="Disconnected" 
                                                       FontSize="12" Foreground="#FF6B6B"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <TextBlock Text="OPERATION STATUS" Style="{StaticResource Power.Style.CategoryHeader}"/>

                            <Border x:Name="OperationPanel" Background="#12FFFFFF" BorderBrush="#25FFFFFF" 
                                    BorderThickness="1" CornerRadius="12" Padding="16" Margin="0,0,0,20"
                                    Visibility="Collapsed">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="OperationSpinner" Text="&#xE117;" 
                                                   FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                                   Foreground="#FF9F43" VerticalAlignment="Center"
                                                   RenderTransformOrigin="0.5,0.5">
                                            <TextBlock.RenderTransform>
                                                <RotateTransform x:Name="SpinnerRotation"/>
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                        <TextBlock x:Name="OperationText" Text="Sending command..." 
                                                   FontSize="13" Foreground="White" 
                                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>
                                    <TextBlock x:Name="OperationDetailText" Text="" 
                                               FontSize="11" Foreground="#70FFFFFF" 
                                               TextWrapping="Wrap" Margin="28,6,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="ResultPanel" CornerRadius="12" Padding="16" 
                                    Margin="0,0,0,20" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="ResultIcon" FontFamily="Segoe MDL2 Assets" 
                                               FontSize="18" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ResultText" FontSize="13" 
                                               VerticalAlignment="Center" Margin="10,0,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Height="1" Background="#15FFFFFF" Margin="0,0,0,20"/>

                            <TextBlock Text="INFORMATION" Style="{StaticResource Power.Style.CategoryHeader}"/>

                            <Border Background="#12FF9F43" BorderBrush="#40FF9F43" BorderThickness="1" 
                                    CornerRadius="12" Padding="14" Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="16" 
                                               Foreground="#FF9F43" VerticalAlignment="Top" Margin="0,2,10,0"/>
                                    <TextBlock Text="Some options may not be available on all devices. Older devices don't support fastbootd mode." 
                                               FontSize="11" Foreground="#D0D0D0" TextWrapping="Wrap" Width="200"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#12FFFFFF" BorderBrush="#25FFFFFF" BorderThickness="1" 
                                    CornerRadius="12" Padding="14">
                                <StackPanel>
                                    <TextBlock Text="Quick Tips" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="White" Margin="0,0,0,8"/>
                                    <TextBlock FontSize="11" Foreground="#90FFFFFF" TextWrapping="Wrap">
                                        <Run Text="• Recovery:" FontWeight="SemiBold"/> 
                                        <Run Text="Install updates, factory reset"/>
                                        <LineBreak/>
                                        <Run Text="• Bootloader:" FontWeight="SemiBold"/> 
                                        <Run Text="Flash firmware, unlock"/>
                                        <LineBreak/>
                                        <Run Text="• Fastbootd:" FontWeight="SemiBold"/> 
                                        <Run Text="Dynamic partitions (A/B)"/>
                                        <LineBreak/>
                                        <Run Text="• Sideload:" FontWeight="SemiBold"/> 
                                        <Run Text="ADB OTA installation"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
