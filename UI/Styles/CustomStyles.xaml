<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:ZephyrsElixir.UI.Helpers"
                    xmlns:core="clr-namespace:ZephyrsElixir.Core">

    <!-- SECTION 1: CORE RESOURCES (Colors, Brushes, Effects, Easings, Converters) -->
    <!-- 1.1 Color Palette -->
    <Color x:Key="App.Color.Blue900">#0B2041</Color>
    <Color x:Key="App.Color.Blue700">#0D3A78</Color>
    <Color x:Key="App.Color.Blue500">#1175E6</Color>
    <Color x:Key="App.Color.Blue300">#63B5FF</Color>
    <Color x:Key="App.Color.White">#FFFFFFFF</Color>
    <Color x:Key="App.Color.White80">#CCFFFFFF</Color>
    <Color x:Key="App.Color.White20">#33FFFFFF</Color>
    <Color x:Key="App.Color.Gold">#FFD000</Color>
    <Color x:Key="App.Color.DeepSkyBlue">#00BFFF</Color>
    <Color x:Key="App.Color.Crimson">#FF6B6B</Color>

    <!-- 1.2 Solid Color Brushes -->
    <!-- Battery Status -->
    <SolidColorBrush x:Key="App.Brush.Battery.Low" Color="#D2042D"/>
    <SolidColorBrush x:Key="App.Brush.Battery.Medium" Color="#F5A623"/>
    <SolidColorBrush x:Key="App.Brush.Battery.High" Color="#7ED321"/>

    <!-- Status Indicators -->
    <SolidColorBrush x:Key="App.Brush.Status.Idle" Color="#607D8B"/>
    <SolidColorBrush x:Key="App.Brush.Status.Active" Color="#00E676"/>
    <SolidColorBrush x:Key="App.Brush.Status.Connected" Color="#00BFFF"/>

    <!-- Standard Brushes -->
    <SolidColorBrush x:Key="App.Brush.Gold" Color="{StaticResource App.Color.Gold}"/>
    <SolidColorBrush x:Key="App.Brush.CheckedForeground" Color="{StaticResource App.Color.White}"/>
    <SolidColorBrush x:Key="App.Brush.NavButtonForeground" Color="{StaticResource App.Color.White80}"/>
    <SolidColorBrush x:Key="App.Brush.DeepSkyBlue" Color="{StaticResource App.Color.DeepSkyBlue}"/>

    <!-- Interactive States -->
    <SolidColorBrush x:Key="App.Brush.Idle" Color="{StaticResource App.Color.White20}"/>
    <SolidColorBrush x:Key="App.Brush.Destructive.Idle" Color="#15FF2A2A"/>

    <!-- Glass Effect Brushes (NOTA: GlassSeparator rimosso perchÃ© duplicato di Glass.Border) -->
    <SolidColorBrush x:Key="App.Brush.Glass.Background" Color="#1AFFFFFF"/>
    <SolidColorBrush x:Key="App.Brush.Glass.Border" Color="#3AFFFFFF"/>

    <!-- 1.3 Gradient Brushes -->
    <LinearGradientBrush x:Key="App.Brush.IconCircle" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource App.Color.Blue300}" Offset="0"/>
        <GradientStop Color="{StaticResource App.Color.Blue500}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="App.Brush.Hover" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#33FFFFFF" Offset="0"/>
        <GradientStop Color="#4CFFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="App.Brush.Pressed" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#26FFFFFF" Offset="0"/>
        <GradientStop Color="#59FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="App.Brush.Checked" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#66FFFFFF" Offset="0"/>
        <GradientStop Color="#86FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Destructive State Brushes -->
    <LinearGradientBrush x:Key="App.Brush.Destructive.Hover" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#25FF4444" Offset="0"/>
        <GradientStop Color="#40FF4444" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="App.Brush.Destructive.Pressed" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#30DC143C" Offset="0"/>
        <GradientStop Color="#60DC143C" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="App.Brush.Destructive.IconCircle" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6B6B" Offset="0"/>
        <GradientStop Color="#DC143C" Offset="1"/>
    </LinearGradientBrush>

    <!-- Sidebar Background -->
    <LinearGradientBrush x:Key="Sidebar.Brush.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource App.Color.Blue700}" Offset="0.0"/>
        <GradientStop Color="{StaticResource App.Color.Blue500}" Offset="0.33"/>
        <GradientStop Color="{StaticResource App.Color.Blue700}" Offset="0.66"/>
        <GradientStop Color="{StaticResource App.Color.Blue900}" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 1.4 Animation Easing Functions -->
    <CubicEase x:Key="App.Easing.Smooth" EasingMode="EaseOut"/>
    <QuadraticEase x:Key="App.Easing.Quick" EasingMode="EaseOut"/>
    <BackEase x:Key="App.Easing.Bounce" EasingMode="EaseOut" Amplitude="0.3"/>

    <!-- 1.5 Shared Effects  -->
    <DropShadowEffect x:Key="App.Effect.PageShadow" 
                      BlurRadius="30" ShadowDepth="5" 
                      Color="Black" Opacity="0.4"/>

    <DropShadowEffect x:Key="App.Effect.LogoGlow" 
                      Color="#4A90E2" BlurRadius="8" 
                      ShadowDepth="0" Opacity="0.6"/>

    <DropShadowEffect x:Key="App.Effect.IconCircleHover" 
                      BlurRadius="14" ShadowDepth="0" 
                      Opacity="0.45" Color="Black"/>

    <DropShadowEffect x:Key="App.Effect.IconCircleBlueGlow" 
                      BlurRadius="14" ShadowDepth="0" 
                      Opacity="0.45" Color="{StaticResource App.Color.Blue300}"/>

    <DropShadowEffect x:Key="App.Effect.KnobShadow" 
                      ShadowDepth="1" BlurRadius="4" Opacity="0.3"/>

    <DropShadowEffect x:Key="App.Effect.GoldGlow.Small" 
                      Color="{StaticResource App.Color.Gold}" 
                      BlurRadius="10" ShadowDepth="0" Opacity="0.9"/>

    <DropShadowEffect x:Key="App.Effect.GoldGlow.Medium" 
                      Color="{StaticResource App.Color.Gold}" 
                      BlurRadius="12" ShadowDepth="0" Opacity="0.6"/>

    <DropShadowEffect x:Key="App.Effect.DestructiveHover" 
                      Color="#DC143C" BlurRadius="12" 
                      ShadowDepth="0" Opacity="0.25"/>

    <DropShadowEffect x:Key="App.Effect.DeepSkyBlueGlow" 
                      BlurRadius="8" ShadowDepth="0" 
                      Color="{StaticResource App.Color.DeepSkyBlue}" Opacity="0.4"/>

    <DropShadowEffect x:Key="App.Effect.SegmentedSelected" 
                      BlurRadius="10" ShadowDepth="0" 
                      Opacity="0.2" Color="Black"/>

    <DropShadowEffect x:Key="App.Effect.TooltipShadow" 
                      BlurRadius="12" ShadowDepth="2" 
                      Opacity="0.4" Color="Black"/>

    <!-- 1.6 Converters -->
    <helpers:IntToBoolConverter x:Key="App.Converter.IntToBool"/>
    <BooleanToVisibilityConverter x:Key="App.Converter.BooleanToVisibility"/>
    <helpers:PercentageToScaleConverter x:Key="App.Converter.PercentageToScale"/>
    <helpers:BatteryWidthConverter x:Key="App.Converter.BatteryWidthConverter"/>
    <helpers:WidthToColumnsConverter x:Key="App.Converter.WidthToColumns"/>
    <helpers:InverseBoolToVisibilityConverter x:Key="App.Converter.InverseBoolToVisibility"/>

    <!-- SECTION 2: BASE STYLES -->

    <!-- 2.1 Text & Typography -->
    <Style x:Key="App.Style.Glyph" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="App.Style.SectionHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 2.2 Glass Card (base container reusable) -->
    <Style x:Key="App.Style.GlassCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.Brush.Glass.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource App.Brush.Glass.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="30"/>
    </Style>


    <!-- SECTION 3: BUTTON STYLES -->

    <!-- 3.1 Glass Button Template -->
    <ControlTemplate x:Key="App.Template.GlassButton" TargetType="Button">
        <Grid>
            <Border x:Name="container" 
                    Background="{TemplateBinding Background}" 
                    CornerRadius="16" 
                    BorderThickness="2" 
                    BorderBrush="#00FFFFFF">
                <Grid Margin="12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border x:Name="iconCircle" 
                            Width="36" Height="36" 
                            CornerRadius="18" 
                            Background="{TemplateBinding BorderBrush}">
                        <TextBlock x:Name="icon" 
                                   Text="{TemplateBinding Tag}" 
                                   Style="{StaticResource App.Style.Glyph}" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Grid.Column="2" 
                               Text="{TemplateBinding Content}" 
                               FontSize="15" FontWeight="SemiBold" 
                               VerticalAlignment="Center" 
                               Foreground="{TemplateBinding Foreground}"/>
                </Grid>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="container" Property="Opacity" Value="0.6"/>
                <Setter TargetName="icon" Property="Foreground" Value="#AAFFFFFF"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="iconCircle" Property="Effect" Value="{StaticResource App.Effect.IconCircleHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="container" Property="Opacity" Value="0.9"/>
                <Setter TargetName="container" Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="100" CenterY="27"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- 3.2 Standard Button Style -->
    <Style x:Key="App.Style.Button" TargetType="Button">
        <Setter Property="MinHeight" Value="54"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="{StaticResource App.Brush.NavButtonForeground}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Background" Value="{StaticResource App.Brush.Idle}"/>
        <Setter Property="BorderBrush" Value="{StaticResource App.Brush.IconCircle}"/>
        <Setter Property="Template" Value="{StaticResource App.Template.GlassButton}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource App.Brush.Hover}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource App.Brush.Pressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 3.3 Destructive Button Style -->
    <Style x:Key="App.Style.Button.Destructive" TargetType="Button" BasedOn="{StaticResource App.Style.Button}">
        <Setter Property="Foreground" Value="#FFC0C0"/>
        <Setter Property="Background" Value="{StaticResource App.Brush.Destructive.Idle}"/>
        <Setter Property="BorderBrush" Value="{StaticResource App.Brush.Destructive.IconCircle}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource App.Brush.Destructive.Hover}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Effect" Value="{StaticResource App.Effect.DestructiveHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource App.Brush.Destructive.Pressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 3.4 Inline Button Template & Styles -->
    <ControlTemplate x:Key="App.Template.InlineButton" TargetType="Button">
        <Border x:Name="container" 
                Background="{TemplateBinding Background}" 
                CornerRadius="8" 
                BorderThickness="1" 
                BorderBrush="#30FFFFFF"
                Padding="10,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="icon" 
                           Text="{TemplateBinding Tag}" 
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="12" 
                           Foreground="{TemplateBinding Foreground}"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="2" 
                           Text="{TemplateBinding Content}" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Foreground="{TemplateBinding Foreground}"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="container" Property="Opacity" Value="0.5"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="container" Property="Background" Value="#28FFFFFF"/>
                <Setter TargetName="container" Property="BorderBrush" Value="#50FFFFFF"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="container" Property="Background" Value="#35FFFFFF"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="App.Style.Button.Inline" TargetType="Button">
        <Setter Property="Height" Value="32"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="#D0D8E8"/>
        <Setter Property="Background" Value="#18FFFFFF"/>
        <Setter Property="Template" Value="{StaticResource App.Template.InlineButton}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="App.Style.Button.Inline.Destructive" TargetType="Button" BasedOn="{StaticResource App.Style.Button.Inline}">
        <Setter Property="Foreground" Value="#FFB0B0"/>
        <Setter Property="Background" Value="#18FF4444"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#FFCCCC"/>
                <Setter Property="Background" Value="#30FF4444"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#40DC143C"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 3.5 Icon Only Button -->
    <Style x:Key="App.Style.Button.IconOnly" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#20FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#30FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 3.6 Link Button -->
    <Style x:Key="App.Style.Button.Link" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#C8DCFF"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 3.7 Window Control Close Button -->
    <Style x:Key="App.Style.WindowControl.Close" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                        <TextBlock Text="&#xE8BB;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="12" 
                                   Foreground="#CCFFFFFF"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E81123"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#B92A1B"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 3.8 Settings Control Button -->
    <Style x:Key="App.Style.SettingsControl" TargetType="Button" BasedOn="{StaticResource App.Style.Button}">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="MinWidth" Value="220"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>


    <!-- SECTION 4: TOGGLE BUTTON STYLES -->
    <Style x:Key="App.Style.ToggleButton" TargetType="ToggleButton">
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="MinHeight" Value="54"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="{StaticResource App.Brush.NavButtonForeground}"/>
        <Setter Property="Background" Value="{StaticResource App.Brush.Idle}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Border x:Name="container" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="16" 
                                BorderThickness="2" 
                                BorderBrush="#00FFFFFF">
                            <Grid Margin="12,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="iconCircle" 
                                        Width="36" Height="36" 
                                        CornerRadius="18" 
                                        Background="{StaticResource App.Brush.IconCircle}">
                                    <TextBlock x:Name="icon" 
                                               Text="{TemplateBinding Tag}" 
                                               Style="{StaticResource App.Style.Glyph}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="2" 
                                           Text="{TemplateBinding Content}" 
                                           FontSize="15" FontWeight="SemiBold" 
                                           VerticalAlignment="Center" 
                                           Foreground="{TemplateBinding Foreground}"/>
                            </Grid>
                        </Border>
                        <Border x:Name="goldFocus" 
                                CornerRadius="18" 
                                BorderThickness="2.2" 
                                BorderBrush="{StaticResource App.Brush.Gold}" 
                                Opacity="0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="container" Property="Background" Value="{StaticResource App.Brush.Hover}"/>
                            <Setter TargetName="iconCircle" Property="Effect" Value="{StaticResource App.Effect.IconCircleBlueGlow}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="container" Property="Background" Value="{StaticResource App.Brush.Pressed}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="container" Property="Background" Value="{StaticResource App.Brush.Checked}"/>
                            <Setter TargetName="container" Property="BorderBrush" Value="#19FFFFFF"/>
                            <Setter TargetName="goldFocus" Property="Opacity" Value="1"/>
                            <Setter Property="Foreground" Value="{StaticResource App.Brush.CheckedForeground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- SECTION 5: RADIO BUTTON STYLES -->
    <Style x:Key="App.Style.RadioButton" TargetType="RadioButton">
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="MinHeight" Value="54"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="{StaticResource App.Brush.NavButtonForeground}"/>
        <Setter Property="Background" Value="{StaticResource App.Brush.Idle}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="container" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="16" 
                            Padding="{TemplateBinding Padding}">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   Foreground="{TemplateBinding Foreground}" 
                                   FontWeight="SemiBold"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="container" Property="Background" Value="{StaticResource App.Brush.Hover}"/>
                            <Setter Property="Foreground" Value="{StaticResource App.Brush.CheckedForeground}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="container" Property="Background" Value="{StaticResource App.Brush.Checked}"/>
                            <Setter Property="Foreground" Value="{StaticResource App.Brush.CheckedForeground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Segmented Radio Button -->
    <Style x:Key="App.Style.SegmentedRadioButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="#B0B8C8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="Bd" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#33FFFFFF"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter TargetName="Bd" Property="Effect" Value="{StaticResource App.Effect.SegmentedSelected}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- SECTION 6: CHECKBOX STYLES -->
    <!-- 6.1 Glass CheckBox -->
    <Style x:Key="App.Style.GlassCheckBox" TargetType="CheckBox">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border x:Name="CheckBorder" 
                                Width="20" Height="20" 
                                CornerRadius="4"
                                Background="#1AFFFFFF"
                                BorderBrush="#4AFFFFFF"
                                BorderThickness="1.5">
                            <Grid>
                                <Path x:Name="CheckMark" 
                                      Data="M 3,9 L 7,13 L 15,5"
                                      Stroke="{StaticResource App.Brush.DeepSkyBlue}"
                                      StrokeThickness="2.5"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"
                                      Opacity="0"
                                      RenderOptions.EdgeMode="Aliased"/>
                            </Grid>
                        </Border>
                        <ContentPresenter Margin="26,0,0,0" 
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                            <Setter TargetName="CheckBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2A00BFFF" Offset="0"/>
                                        <GradientStop Color="#4A00BFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{StaticResource App.Brush.DeepSkyBlue}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckBorder" Property="Background" Value="#2AFFFFFF"/>
                            <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#8AFFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 6.2 Toggle Switch -->
    <Style x:Key="App.Style.ToggleSwitch" TargetType="CheckBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ContentPresenter Grid.Column="0" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
                        
                        <Border x:Name="SwitchTrack" 
                                Grid.Column="1"
                                Width="40" Height="22" 
                                CornerRadius="11" 
                                Background="#33FFFFFF" 
                                BorderBrush="#4AFFFFFF"
                                BorderThickness="1">
                            <Ellipse x:Name="SwitchKnob" 
                                     Width="16" Height="16" 
                                     Fill="White" 
                                     HorizontalAlignment="Left" 
                                     Margin="2,0,0,0"
                                     Effect="{StaticResource App.Effect.KnobShadow}">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="SwitchTrack" Property="Background" Value="{StaticResource App.Brush.DeepSkyBlue}"/>
                            <Setter TargetName="SwitchTrack" Property="BorderBrush" Value="{StaticResource App.Brush.DeepSkyBlue}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SwitchKnob" 
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         To="18" Duration="0:0:0.2"
                                                         EasingFunction="{StaticResource App.Easing.Smooth}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SwitchKnob" 
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         To="0" Duration="0:0:0.2"
                                                         EasingFunction="{StaticResource App.Easing.Smooth}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 6.3 Toggle Switch Extreme  -->
    <Style x:Key="App.Style.ToggleSwitch.Extreme" TargetType="CheckBox" BasedOn="{StaticResource App.Style.ToggleSwitch}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border x:Name="ContentGlow" Grid.Column="0" VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource App.Color.Gold}" BlurRadius="8" ShadowDepth="0" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </Border>
                        
                        <Border x:Name="SwitchTrack" 
                                Grid.Column="1" 
                                Width="40" Height="22" 
                                CornerRadius="11" 
                                Background="#33FFFFFF" 
                                BorderBrush="#4AFFFFFF" 
                                BorderThickness="1">
                            <Ellipse x:Name="SwitchKnob" 
                                     Width="16" Height="16" 
                                     Fill="White" 
                                     HorizontalAlignment="Left" 
                                     Margin="2,0,0,0"
                                     Effect="{StaticResource App.Effect.KnobShadow}">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="SwitchTrack" Property="Background" Value="{StaticResource App.Brush.Gold}"/>
                            <Setter TargetName="SwitchTrack" Property="BorderBrush" Value="{StaticResource App.Brush.Gold}"/>
                            <Setter TargetName="SwitchKnob" Property="Fill">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFFEF0" Offset="0"/>
                                        <GradientStop Color="#FFE066" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="SwitchKnob" Property="Effect" Value="{StaticResource App.Effect.GoldGlow.Small}"/>
                            <Setter TargetName="SwitchTrack" Property="Effect" Value="{StaticResource App.Effect.GoldGlow.Medium}"/>
                            <Setter TargetName="ContentGlow" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{StaticResource App.Color.Gold}" BlurRadius="8" ShadowDepth="0" Opacity="0"/>
                                </Setter.Value>
                            </Setter>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SwitchKnob" 
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         To="18" Duration="0:0:0.2" 
                                                         EasingFunction="{StaticResource App.Easing.Smooth}"/>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ContentGlow"
                                                                       Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)">
                                            <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.05" Value="1"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.15" Value="0.3"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.2" Value="0.9"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="0.4"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0.6"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ContentGlow"
                                                                       Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)">
                                            <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="4"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.05" Value="16"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.15" Value="6"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.2" Value="14"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="8"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SwitchKnob" 
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         To="0" Duration="0:0:0.2" 
                                                         EasingFunction="{StaticResource App.Easing.Smooth}"/>
                                        <DoubleAnimation Storyboard.TargetName="ContentGlow"
                                                         Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                         To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- SECTION 7: SCROLLBAR STYLE -->
    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="Width" Value="14"/>
        <Setter Property="MinWidth" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <ControlTemplate.Resources>
                        <Style x:Key="RepeatButtonTransparent" TargetType="{x:Type RepeatButton}">
                            <Setter Property="OverridesDefaultStyle" Value="true"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Focusable" Value="false"/>
                            <Setter Property="IsTabStop" Value="false"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                                        <Rectangle Fill="{TemplateBinding Background}" 
                                                   Height="{TemplateBinding Height}" 
                                                   Width="{TemplateBinding Width}"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="MinHeight" Value="60"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                        <Border Name="border" CornerRadius="6" MinHeight="60">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#C8FFD700" Offset="0.0"/>
                                                    <GradientStop Color="#DCEBEB64" Offset="0.5"/>
                                                    <GradientStop Color="#C8FFD700" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" 
                                                                  Color="{StaticResource App.Color.Gold}" Opacity="0.6"/>
                                            </Border.Effect>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#FFFFEB64" Offset="0.0"/>
                                                            <GradientStop Color="#FFFFFFAA" Offset="0.5"/>
                                                            <GradientStop Color="#FFFFEB64" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" 
                                                                          Color="#FFEB64" Opacity="0.8"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsDragging" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FFFFD700"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" 
                                                                          Color="{StaticResource App.Color.Gold}" Opacity="1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ControlTemplate.Resources>
                    <Border Background="#19FFFFFF" CornerRadius="6">
                        <Grid>
                            <Track Name="PART_Track" IsDirectionReversed="True" Margin="2">
                                <Track.ViewportSize>NaN</Track.ViewportSize>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" 
                                                  Style="{StaticResource RepeatButtonTransparent}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" 
                                                  Style="{StaticResource RepeatButtonTransparent}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}" MinHeight="60"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


