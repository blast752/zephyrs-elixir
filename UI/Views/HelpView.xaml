                            </DataTrigger>
                            <DataTrigger Binding="{Binding SelectedNav.Key}" Value="about">
                                <Setter Property="ContentTemplate" Value="{StaticResource PageTemplate_About}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
            
        </ScrollViewer>
    </Grid>
</UserControl>
