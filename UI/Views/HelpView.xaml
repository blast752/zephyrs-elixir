<UserControl x:Class="ZephyrsElixir.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ZephyrsElixir.ViewModels"
             xmlns:helpers="clr-namespace:ZephyrsElixir.UI.Helpers"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:HelpViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <DropShadowEffect x:Key="GlowEffect" Color="#00BFFF" BlurRadius="24" ShadowDepth="0" Opacity="0.8"/>
        <DropShadowEffect x:Key="SoftGlow" Color="#7FD4FF" BlurRadius="16" ShadowDepth="0" Opacity="0.6"/>
        <helpers:EqualityToVisibilityConverter x:Key="EqToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="SlideFadeOnVisible" TargetType="StackPanel">
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <Trigger Property="Visibility" Value="Visible">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                            From="0" To="1" Duration="0:0:0.3"/>
                                <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                From="0,20,0,0" To="0,0,0,0" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <LinearGradientBrush x:Key="HeadingGradientBrush" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="White" Offset="0.0"/>
            <GradientStop Color="#FFFFD700" Offset="0.7"/>
            <GradientStop Color="#FF00BFFF" Offset="1.0"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FFD700" Offset="0.0"/>
            <GradientStop Color="#00BFFF" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="CardContainer" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="26"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Background" Value="#32007FFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="#FF007FFF" Opacity="0.40"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#B3FFD700" Offset="0.0"/>
                        <GradientStop Color="#8000BFFF" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="#19FFFFFF"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,12,0,12"/>
        </Style>

        <Style x:Key="HintBox" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#28FFD700" Offset="0.0"/>
                        <GradientStop Color="#1400BFFF" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#50FFD700"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="Effect" Value="{StaticResource SoftGlow}"/>
        </Style>

        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource HeadingGradientBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,20,0,8"/>
        </Style>

        <Style x:Key="H3" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FFDCDCFF"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,14,0,6"/>
        </Style>

        <Style x:Key="Body" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#FFC8D8FF"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="LineHeight" Value="24"/>
        </Style>

        <Style x:Key="BodyLarge" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="LineHeight" Value="26"/>
        </Style>

        <Style x:Key="Caption" TargetType="TextBlock" BasedOn="{StaticResource Body}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Opacity" Value="0.75"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <Style x:Key="Emphasis" TargetType="Run">
            <Setter Property="Foreground" Value="#FFFFD700"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="{x:Type Hyperlink}">
            <Setter Property="Foreground" Value="#FF7FD4FF"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavListBox" TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Border" 
                                           Background="{TemplateBinding Background}"
                                           BorderThickness="0"
                                           CornerRadius="12"
                                           Padding="14,10,14,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0"
                                                      Text="{Binding Icon}"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      FontSize="16"
                                                      Foreground="#FFC8D8FF"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,12,0"/>
                                            
                                            <TextBlock Grid.Column="1"
                                                      Text="{Binding Title}"
                                                      FontSize="14"
                                                      FontWeight="Medium"
                                                      Foreground="White"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#26FFFFFF"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#50FFD700" Offset="0.0"/>
                                                        <GradientStop Color="#5000BFFF" Offset="1.0"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="PageTemplate_Welcome">
            <StackPanel Style="{StaticResource SlideFadeOnVisible}">
                <Border Style="{StaticResource CardContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource H1}">
                            Welcome to Zephyr's Elixir
                        </TextBlock>
                        
                        <TextBlock Style="{StaticResource BodyLarge}" Margin="0,10,0,0">
                            <Run Text="I'm thrilled to have you here. Zephyr's Elixir is my answer to a simple question: "/><Run Style="{StaticResource Emphasis}" Text="Why can't Android optimization be both powerful and beautiful?"/>
                        </TextBlock>
                        
                        <TextBlock Style="{StaticResource Body}">
                            After countless hours of development, I've crafted an application that combines the deep customization capabilities of Android with an interface that rivals the elegance of iOS. This isn't just another ADB tool—it's a complete optimization ecosystem designed with care, precision, and respect for your device.
                        </TextBlock>

                        <TextBlock Style="{StaticResource H2}">
                            What Makes Zephyr's Elixir Special?
                        </TextBlock>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource H3}">
                                    <Run Text="&#xE946;" FontFamily="Segoe MDL2 Assets"/><Run Text="  Effortless Power"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    One button. That's all it takes. Behind that simple "Start Optimization" button lies a carefully orchestrated sequence of 105+ optimization steps that transform your device's performance.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource H3}">
                                    <Run Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets"/><Run Text="  Complete Transparency"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    Every action is logged in real-time through the Optimization Console. You're never left wondering "what's happening?" — you see exactly what I'm doing to your device, command by command.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource H3}">
                                    <Run Text="&#xE72C;" FontFamily="Segoe MDL2 Assets"/><Run Text="  Total Reversibility"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    Nothing is permanent unless you want it to be. The Advanced section tracks every change I make during your session, and you can undo everything with a single "Reset All" button.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource H3}">
                                    <Run Text="&#xEA8F;" FontFamily="Segoe MDL2 Assets"/><Run Text="  No Root Required"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    I use ADB (Android Debug Bridge) exclusively, which means you don't need to unlock your bootloader or void your warranty. Just enable USB debugging and you're ready to go.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource H3}">
                                    <Run Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets"/><Run Text="  Privacy First"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    Zephyr's Elixir is completely offline. No telemetry, no analytics, no data collection. What happens on your device stays on your device.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Style="{StaticResource H2}">
                            The Philosophy
                        </TextBlock>
                        
                        <TextBlock Style="{StaticResource Body}">
                            I believe optimization shouldn't feel like work. It shouldn't require you to memorize ADB commands or spend hours researching what's safe to disable. Instead, it should feel like magic—intuitive, beautiful, and rewarding.
                        </TextBlock>
                        
                        <TextBlock Style="{StaticResource Body}">
                            That's why every element of this interface is carefully designed. From the animated particle effects to the real-time battery monitoring in the sidebar, every detail serves a purpose: to make your experience as smooth and delightful as the optimizations themselves.
                        </TextBlock>

                        <Border Style="{StaticResource HintBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" FontWeight="SemiBold" Foreground="White">
                                    Ready to begin?
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    Start with the "First Steps" section to set up your device, or jump straight to "Quick Guide" if you're eager to optimize. I'm here to guide you every step of the way.
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PageTemplate_FirstSteps">
            <StackPanel Style="{StaticResource SlideFadeOnVisible}">
                <Border Style="{StaticResource CardContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource H1}">
                            First Steps
                        </TextBlock>
                        
                        <TextBlock Style="{StaticResource BodyLarge}" Margin="0,10,0,0">
                            Let's get your device ready for optimization. This process is straightforward and takes just a few minutes.
                        </TextBlock>

                        <TextBlock Style="{StaticResource H2}">
                            1. Enable USB Debugging
                        </TextBlock>

                        <TextBlock Style="{StaticResource Body}">
                            USB Debugging is the gateway that allows Zephyr's Elixir to communicate with your Android device. Here's how to enable it:
                        </TextBlock>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource H3}">
                                    <Run Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets"/><Run Text="  Step-by-Step Process"/>
                                </TextBlock>
                                
                                <TextBlock Style="{StaticResource Body}" Margin="0,8,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="1."/>
                                    <Run Text=" Open your device's "/>
                                    <Run Style="{StaticResource Emphasis}" Text="Settings"/>
                                </TextBlock>
                                
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="2."/>
                                    <Run Text=" Navigate to "/>
                                    <Run Style="{StaticResource Emphasis}" Text="About Phone"/>
                                    <Run Text=" (usually at the bottom)"/>
                                </TextBlock>
                                
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="3."/>
                                    <Run Text=" Find "/>
                                    <Run Style="{StaticResource Emphasis}" Text="Build Number"/>
                                    <Run Text=" and tap it "/>
                                    <Run Style="{StaticResource Emphasis}" Text="7 times"/>
                                </TextBlock>
                                
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="4."/>
                                    <Run Text=" You'll see a message saying "/>
                                    <Run Style="{StaticResource Emphasis}" Text='"You are now a developer!"'/>
                                </TextBlock>
                                
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="5."/>
                                    <Run Text=" Go back to Settings and find "/>
                                    <Run Style="{StaticResource Emphasis}" Text="Developer Options"/>
                                </TextBlock>
                                
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="6."/>
                                    <Run Text=" Enable "/>
                                    <Run Style="{StaticResource Emphasis}" Text="USB Debugging"/>
                                </TextBlock>
                                
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,0">
                                    <Run Style="{StaticResource Emphasis}" Text="7."/>
                                    <Run Text=" Confirm the security prompt"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Style="{StaticResource H2}">
                            2. Connect Your Device
                        </TextBlock>

                        <TextBlock Style="{StaticResource Body}">
                            Now that USB Debugging is enabled, connect your device to your computer using a USB cable.
                        </TextBlock>

                        <Border Style="{StaticResource HintBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" FontWeight="SemiBold" Foreground="White">
                                    <Run Text="&#xE946;" FontFamily="Segoe MDL2 Assets"/><Run Text="  Important: Use a Data Cable"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    Not all USB cables support data transfer. If your device isn't being detected, try a different cable. The cable that came with your phone usually works best.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Style="{StaticResource Body}" Margin="0,12,0,0">
                            When you first connect:
                        </TextBlock>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Text="• A popup will appear on your device asking "/>
                                    <Run Style="{StaticResource Emphasis}" Text='"Allow USB debugging?"'/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Text="• Check "/>
                                    <Run Style="{StaticResource Emphasis}" Text='"Always allow from this computer"'/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    <Run Text="• Tap "/>
                                    <Run Style="{StaticResource Emphasis}" Text="OK"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Style="{StaticResource H2}">
                            3. Verify Connection
                        </TextBlock>

                        <TextBlock Style="{StaticResource Body}">
                            Look at the left sidebar in Zephyr's Elixir. At the bottom, you'll see the device status panel. Once your device is properly connected, you should see:
                        </TextBlock>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Text="• Your device name (e.g., "/>
                                    <Run Style="{StaticResource Emphasis}" Text='"Samsung Galaxy S23"'/>
                                    <Run Text=")"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    <Run Text="• A battery indicator showing your current charge level"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Style="{StaticResource Body}" Margin="0,12,0,0">
                            All navigation buttons (Optimize, Debloat, Advanced) will become enabled when a device is detected.
                        </TextBlock>

                        <TextBlock Style="{StaticResource H2}">
                            4. Optional: Set Up Wireless Connection
                        </TextBlock>

                        <TextBlock Style="{StaticResource Body}">
                            Once you've connected via USB at least once, you can set up wireless ADB. This lets you use Zephyr's Elixir without keeping your phone plugged in.
                        </TextBlock>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource H3}">
                                    <Run Text="&#xE839;" FontFamily="Segoe MDL2 Assets"/><Run Text="  Setting Up Wireless Mode"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,8,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="1."/>
                                    <Run Text=" Make sure your device is connected via USB"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="2."/>
                                    <Run Text=" Go to the Home screen"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="3."/>
                                    <Run Text=" Click "/>
                                    <Run Style="{StaticResource Emphasis}" Text="Wireless Connection"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Style="{StaticResource Emphasis}" Text="4."/>
                                    <Run Text=" The wizard will guide you through enabling ADB over Wi-Fi"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    <Run Style="{StaticResource Emphasis}" Text="5."/>
                                    <Run Text=" Once configured, you can unplug your USB cable and continue wirelessly"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource HintBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" FontWeight="SemiBold" Foreground="White">
                                    <Run Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"/><Run Text="  You're All Set!"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    Now that your device is connected, you're ready to explore Zephyr's Elixir's powerful features. Head to the Quick Guide to start optimizing!
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PageTemplate_Basics">
            <StackPanel Style="{StaticResource SlideFadeOnVisible}">
                <Border Style="{StaticResource CardContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource H1}">
                            The Basics
                        </TextBlock>
                        
                        <TextBlock Style="{StaticResource BodyLarge}" Margin="0,10,0,0">
                            Before diving into optimization, let's understand what Zephyr's Elixir does and how it works.
                        </TextBlock>

                        <TextBlock Style="{StaticResource H2}">
                            What is ADB?
                        </TextBlock>

                        <TextBlock Style="{StaticResource Body}">
                            ADB (Android Debug Bridge) is a powerful command-line tool that comes with the Android SDK. It allows communication between your computer and your Android device. Zephyr's Elixir uses ADB to safely apply optimizations without requiring root access.
                        </TextBlock>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,8">
                                    <Run Style="{StaticResource Emphasis}" Text="Why ADB is Safe:"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Text="• "/>
                                    <Run Text="All changes are made through official Android APIs"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Text="• "/>
                                    <Run Text="No system file modifications"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,4">
                                    <Run Text="• "/>
                                    <Run Text="Everything can be reversed"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    <Run Text="• "/>
                                    <Run Text="Doesn't void your warranty"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Style="{StaticResource H2}">
                            Understanding the Interface
                        </TextBlock>

                        <TextBlock Style="{StaticResource H3}">
                            <Run Text="&#xE8EA;" FontFamily="Segoe MDL2 Assets"/><Run Text="  The Sidebar"/>
                        </TextBlock>

                        <TextBlock Style="{StaticResource Body}">
                            The left sidebar is your navigation hub. It contains:
                        </TextBlock>

                        <Border Style="{StaticResource HighlightBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,6">
                                    <Run Style="{StaticResource Emphasis}" Text="Home:"/>
                                    <Run Text=" Your starting point with quick access to optimization and wireless setup"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,6">
                                    <Run Style="{StaticResource Emphasis}" Text="Optimize:"/>
                                    <Run Text=" The main automated optimization process"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,6">
                                    <Run Style="{StaticResource Emphasis}" Text="Debloat:"/>
                                    <Run Text=" Remove or disable unwanted system and user apps"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,6">
                                    <Run Style="{StaticResource Emphasis}" Text="Advanced:"/>
                                    <Run Text=" Granular control over DNS, animations, battery, and more"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Margin="0,0,0,6">
                                    <Run Style="{StaticResource Emphasis}" Text="Settings:"/>
                                    <Run Text=" Application configuration, logs, and legal information"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    <Run Style="{StaticResource Emphasis}" Text="Help &amp; Info:"/>
                                    <Run Text=" Where you are now—comprehensive documentation"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Style="{StaticResource Body}" Margin="0,12,0,0">
                            At the bottom of the sidebar, you'll find the device status panel showing your connected device name and battery level in real-time.
                        </TextBlock>

                        <TextBlock Style="{StaticResource H3}">
                            <Run Text="&#xE756;" FontFamily="Segoe MDL2 Assets"/><Run Text="  The Console"/>
                        </TextBlock>

                        <TextBlock Style="{StaticResource Body}">
                            The Optimization Console appears at the bottom of the Optimize screen. This terminal-style interface shows you exactly what's happening during optimization. Every ADB command, every status update, every change—it's all logged here in real-time.
                        </TextBlock>

                        <Border Style="{StaticResource HintBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Body}" FontWeight="SemiBold" Foreground="White">
                                    <Run Text="&#xE946;" FontFamily="Segoe MDL2 Assets"/><Run Text="  Pro Tip"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}">
                                    You can export the entire console log from Settings → Application → Export Logs. This is useful for troubleshooting or sharing diagnostic information.
